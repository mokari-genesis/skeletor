{
  "name": "skeletor-root",
  "version": "1.0.0",
  "private": true,
  "description": "Root configuration for Skeletor project",
  "scripts": {
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "check-format": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "**/*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
